<!--  Swiper-------------------------------------->
<view class="index_swiper">
    <swiper autoplay="{{true}}"
            interval="2000"
            duration="500"
            indicator-dots="{{true}}"
            indicator-color="#666"
            indicator-active-color="#ee5477"
            circular="{{true}}"
            >  
        <swiper-item wx:for="{{swiperList}}"
                     wx:key="goods_id">
            <navigator>
                <image mode="widthFix" src="{{item.image_src}}"></image>
            </navigator>
        </swiper-item>
    </swiper>
</view>
<!-- daohang ---------------------------------------->
<view class="index_cate">
    <navigator wx:for="{{cateList}}"
                wx:key="name"
                >
        <image src="{{item.image_src}}" mode="widthFix">
        </image>
    </navigator>
</view>

<!--  loucneg ------------------------------>
<view class="index_floor">
    <view class="floor_group"
    wx:for="{{floorList}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="floor_title">
        <view class="floor_title">
            <image src="{{item1.floor_title.image_src}}" mode="widthFix">
            </image>
        </view>
        <view class="floor_list">
            <navigator
            wx:for="{{item1.product_list}}"
             wx:for-item="item2"
             wx:for-index="index2"
                 wx:key="name"
            >
                <image src="{{item2.image_src}}" mode="{{index2===0?'widthFix':'scaleToFix'}}">
                </image>
            </navigator>      
        </view>
    </view>
</view>
  